<div class="container d-flex flex-wrap p-4">
    <% providers[0].students.forEach(student => { %>
        <!-- Card -->
        <div class="card mx-3 shadow" style="width: 16rem; height: 21.8em;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <%= student.name %>
                <button class="btn btn-link custom-btn" type="button" data-bs-toggle="modal" data-bs-target="#<%= student._id %>">
                    
                    <img src="./assets/maximize.png" width="16px" height="16px" />
                 </button>
            </div>
            <ul class="list-group list-group-flush">
            <% let wordList = student.realWords.concat(student.nonsenseWords); %>
            <% wordList.forEach(word => { %>

                <li class="list-group-item"><%= word %></li>

            <% }) %>
                
            </ul>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <button class="btn btn-link custom-btn">
                    <img src="./assets/trash.png" width="24px"/>
                </button>
                <button class="btn btn-link custom-btn">
                    <img src="./assets/edit.png" width="24px"/>
                </button>
            </div>
        </div>

        <!--Modal id="exampleModal"-->
        <%- include ("viewStudentModal", {student: student, wordList: wordList, phrases, sentences}) %>
        
    <% }) %>

</div>


